@using YueShanp.Models
@model DeliveryIndexViewModel

@{
    ViewBag.Title = "DeliveryIndex";
}

@section styles{
    <link href="~/Content/Delivery/DeliveryIndex.min.css" rel="stylesheet" />
}

<h2>出貨單系統</h2>
<div class="container" ng-app="mvcApp" >
    <ul id="deliveryIndextTab" class="nav nav-tabs">
        <li class="active"><a href="#addDelivery">新增</a></li>
        <li><a href="#queryDelivery">查詢</a></li>
        <li><a href="#monthDelivery">月結單</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="addDelivery">
            <div ng-controller="addDeliveryCtrl">
                @Html.Partial("_AddDelivery", new ViewDataDictionary { { nameof(DeliveryIndexViewModel.CustomerList), Model.CustomerList.ToList() } })
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="queryDelivery">
            @QueryDelivery()
        </div>
        <div role="tabpanel" class="tab-pane" id="monthDelivery">
            @MonthDelivery()
        </div>
    </div>
</div>

@section scriptsAtFoot{
    <script src="~/Scripts/Delivery/DeliveryIndex.js"></script>

    <!--_AddDelivery.cshtml-->
    <script src="~/Scripts/Delivery/AddDelivery.js"></script>
    <script src="~/Scripts/Common/ServiceCommon.js"></script>
    <script src="~/Scripts/Common/CommonHelper.js"></script>
}

@helper QueryDelivery()
{
    <div class="row">
        <div class="col-lg-12">
            查詢出貨單
        </div>
    </div>
}


@helper MonthDelivery()
{
    <div class="row">
        <div class="col-lg-12">
            月結報表
        </div>
    </div>
}


